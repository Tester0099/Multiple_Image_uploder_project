
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP verification</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <style>
        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        html, body {
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        body {
            position: relative;
            height: 100vh;
            width: 100%;
            background: #22c1c3;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .main-container {
            position: absolute;
            z-index: 1;
        }

        /*    .container_holder{
            gap:100px;
        }*/

        .form-control {
            width: 500px !important;
            height: 50px;
        }

        .form-control:focus {
                box-shadow: none;
        }

        input::placeholder {
            font-weight: bold;
        }

        .btn {
            width: 100px !important;
            height: 40px !important;
        }

        form {
            width: fit-content !important;
        }
    </style>
</head>
<body>
    <div class="main-container d-flex align-items-center justify-content-center">
        <div class="container_holder row py-5 d-flex ">
            <div class="text-container col-lg-6 d-flex align-items-center  text-light">
                @*<img src="~/Content/image/3d-mobile-phone-with-security-code-padlock.jpg" width="250px" class="img-fluid rounded"  />*@
                <h2 class="fw-bold">OTP VERIFICATION</h2>
            </div>
            <div class="input_holder col-lg-6 d-flex align-items-center flex-column">
                <form action="/Account/verification" method="post" class="mt-5 mt-4 bg-light p-5  rounded">
                    <br />
                    <input type="text" class="form-control" name="otp" placeholder="Enter otp" />
                    <br />
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
                <span class="text-success" id="remove">@TempData["msg"]</span>
                <span class="text-danger">@ViewBag.Error</span>
            </div>
        </div>
    </div>
    <script>
        var remove = document.getElementById("remove");

        addEventListener("DOMContentLoaded", () => {
            setTimeout(() => {
                remove.style.display = "none";
            }, 3000)
        })
    </script>
</body>
</html>


