
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register Page</title>
    <!--Bootstrap CDN-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <!--Sweet Alert CDN-->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


    <style>
        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        html, body {
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        body {
            position: relative;
            height: 100vh;
            width: 100%;
            background: #22c1c3;
        }
        /*    .animation img{
            position:absolute;
            height:150px;
            width:150px;
            animation:move 5s linear infinite;
        }
        @@keyframes move{
            0%{
                transform:translateX(-0px);
            }
            25%{
                transform:translateX(900px);
            }
            75%{
                transform:translateX(200px);
            }
            100%{
                transform:translateX(200px);
            }
        }*/
        .main-container {
            position: absolute;
            z-index: 1;
            height: 100vh;
            width: 100%;
        }
        /*    .container_holder{
            gap:100px;
        }*/
        .form-control {
            width: 500px !important;
            height: 50px;
        }

            .form-control:focus {
                box-shadow: none;
            }

        input::placeholder {
            font-weight: bold;
        }

        .btn {
            width: 100px !important;
            height: 40px !important;
        }

        form {
            width: fit-content !important;
        }
    </style>
</head>
<body>

    <div class="main-container d-flex align-items-center justify-content-center">
        <div class="container_holder row py-5 d-flex ">
            <div class="text-container col-lg-6 d-flex align-items-center  text-light ">
                @*<img src="~/Content/image/send.jpg" width="250px" class="img-fluid rounded" />*@
                <h1 class="fw-bold">Register Form</h1>
            </div>
            <div class="input_holder col-lg-6 d-flex justify-content-center align-content-center flex-column gap-2">
                <br />
                <form action="/Account/Adduser" method="post" class="mt-4 bg-light p-5  rounded">
                    <h2 class="text-center">Regsiter Form</h2><br />
                    <input type="text" class="form-control" name="Username" placeholder="Enter Username" /><br />

                    <input type="email" class="form-control" name="Email" placeholder="Enter email" />

                    <br />
                    <button type="submit" class="btn btn-primary">Submit</button>

                    <div class="pt-2">
                        <p>Already have an account?<a href="@Url.Action("SendOTP","Account")">Login</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            var success ='@TempData["Msg"]';
            var error ='@TempData["error"]';

            if (success) {
                Swal.fire({
                    title: "Dear user!",
                    text: "Data insert successfully!",
                    icon: "success"
                });
            }
            else if (error) {
                Swal.fire({
                    title: "Dear user!",
                    text: "Data insertion Failed!",
                    icon: "error"
                });
            }
        })

    </script>
</body>
</html>

