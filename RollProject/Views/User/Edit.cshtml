
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link rel="stylesheet" href="~/Content/css/all.min.css" />
    <link rel="stylesheet" href="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
</head>
<body>

    <div class="container-fluid p-5 border w-auto">
        <form action="/User/Update_image" method="post" enctype="multipart/form-data">
            <div class="mb-2 ">
                <input type="hidden" name="id" value="@Model.id" />
                <img src="~/Content/Upload_Image/@Model.image" style="height:100px; width:100px;" /><br />
                <label class="form-label">IMAGE INSERT</label><br />
                <input type="file" class="border border-1 p-1 rounded form-check form-control w-25" name="image" />
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

</body>
</html>
